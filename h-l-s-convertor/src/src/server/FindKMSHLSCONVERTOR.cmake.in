set(PACKAGE_VERSION "@PROJECT_VERSION@")
set(KMSHLSCONVERTOR_VERSION ${PACKAGE_VERSION})

message (STATUS "Looking for KMSHLSCONVERTOR: @PROJECT_VERSION@")

include (GenericFind)

generic_find (
  REQUIRED
  LIBNAME KMSCORE
  VERSION ^6.0.0
)

generic_find (
  REQUIRED
  LIBNAME KMSELEMENTS
  VERSION ^6.0.0
)

generic_find (
  REQUIRED
  LIBNAME KMSFILTERS
  VERSION ^6.0.0
)

set (REQUIRED_VARS
  KMSHLSCONVERTOR_VERSION
  KMSHLSCONVERTOR_INCLUDE_DIRS
  KMSHLSCONVERTOR_LIBRARY
  KMSHLSCONVERTOR_LIBRARIES
)

set(KMSHLSCONVERTOR_INCLUDE_DIRS
  ${KMSCORE_INCLUDE_DIRS}
  ${KMSELEMENTS_INCLUDE_DIRS}
  ${KMSFILTERS_INCLUDE_DIRS}
)

if (NOT "@_INTERFACE_GENERATED_HEADERS@ @_INTERFACE_INTERNAL_GENERATED_HEADERS@" STREQUAL " ")
  find_path(KMSHLSCONVERTOR_INTERFACE_INCLUDE_DIR
    NAMES
      @_INTERFACE_GENERATED_HEADERS@
      @_INTERFACE_INTERNAL_GENERATED_HEADERS@
    PATH_SUFFIXES
      @_INTERFACE_HEADERS_DIR@
      kurento/modules/hlsconvertor
  )

  list (APPEND KMSHLSCONVERTOR_INCLUDE_DIRS ${KMSHLSCONVERTOR_INTERFACE_INCLUDE_DIR})
  list (APPEND REQUIRED_VARS KMSHLSCONVERTOR_INTERFACE_INCLUDE_DIR)
endif ()

if (NOT "@_SERVER_INTERNAL_GENERATED_HEADERS@" STREQUAL "")
  find_path(KMSHLSCONVERTOR_IMPLEMENTATION_INTERNAL_INCLUDE_DIR
    NAMES
      @_SERVER_INTERNAL_GENERATED_HEADERS@
    PATH_SUFFIXES
      @_SERVER_INTERNAL_GENERATED_HEADERS_DIR@
      kurento/modules/hlsconvertor
  )

  list (APPEND KMSHLSCONVERTOR_INCLUDE_DIRS ${KMSHLSCONVERTOR_IMPLEMENTATION_INTERNAL_INCLUDE_DIR})
  list (APPEND REQUIRED_VARS KMSHLSCONVERTOR_IMPLEMENTATION_INTERNAL_INCLUDE_DIR)
endif ()

if (NOT "@_SERVER_GENERATED_HEADERS@" STREQUAL "")
  find_path(KMSHLSCONVERTOR_IMPLEMENTATION_GENERATED_INCLUDE_DIR
    NAMES
      @_SERVER_GENERATED_HEADERS@
    PATH_SUFFIXES
      @_PARAM_SERVER_STUB_DESTINATION@
      kurento/modules/hlsconvertor
  )

  list (APPEND KMSHLSCONVERTOR_INCLUDE_DIRS ${KMSHLSCONVERTOR_IMPLEMENTATION_GENERATED_INCLUDE_DIR})
  list (APPEND REQUIRED_VARS KMSHLSCONVERTOR_IMPLEMENTATION_GENERATED_INCLUDE_DIR)
endif()

if (NOT "@_PARAM_SERVER_IMPL_LIB_EXTRA_HEADERS@" STREQUAL "")
  find_path(KMSHLSCONVERTOR_IMPLEMENTATION_EXTRA_INCLUDE_DIR
    NAMES
      @_PARAM_SERVER_IMPL_LIB_EXTRA_HEADERS@
    PATH_SUFFIXES
      @_PARAM_SERVER_IMPL_LIB_EXTRA_HEADERS_PREFIX@
      kurento/modules/hlsconvertor
  )

  list (APPEND KMSHLSCONVERTOR_INCLUDE_DIRS ${KMSHLSCONVERTOR_IMPLEMENTATION_EXTRA_INCLUDE_DIR})
  list (APPEND REQUIRED_VARS KMSHLSCONVERTOR_IMPLEMENTATION_EXTRA_INCLUDE_DIR)
